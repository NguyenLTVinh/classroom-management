doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Data Display
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="/js/index.js")
  body
    h1 Data from MySQL Database
    select#class-select
      if classes
        each className in classes
          option(value=className)= className
    table#data-table(border="1")
      thead
        tr
          th Number
          th Name
          th Gender
          th Birthday
          th Email1
          th Email2
      tbody
        if students
          each row in students
            tr
              td= row.number
              td= row.name
              td= row.gender
              td= row.birthday
              td= row.email1
              td= row.email2 || ''
        else
          tr
            td(colspan="6") No data available
